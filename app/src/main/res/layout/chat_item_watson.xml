<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="10dp"
    android:paddingLeft="3dp"
    android:id="@+id/their"
    android:paddingRight="120dp"
    android:clipToPadding="false">

    <ImageView
        android:id="@+id/avatar"
        android:layout_alignParentLeft="true"
        android:scaleType="centerInside"
        android:layout_width="34dp"
        android:src="@drawable/collective_intelligence_icon_use"
        android:layout_height="34dp" />

    <TextView
        android:id="@+id/name"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/avatar"
        android:layout_alignTop="@+id/avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:text="COVID-19 RELIEF"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/message"
        android:layout_below="@+id/name"
        android:layout_alignLeft="@+id/name"
        android:background="@drawable/their_message"
        android:paddingVertical="12dp"
        android:paddingHorizontal="16dp"
        android:elevation="2dp"
        android:textSize="18dp"
        android:text="How are you doing? This is a long message that should probably wrap."
        />





    <Spinner
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@drawable/their_message2"
        android:id="@+id/option"
        android:gravity="center"
        android:visibility="invisible"
        android:textAlignment="center"
        android:layout_alignLeft="@+id/name"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:layout_below="@id/message"
        android:elevation="2dp"
        android:textSize="18dp"/>
</RelativeLayout>