<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Select anyone"
        android:textSize="20dp"
        android:fontFamily="@font/roboto_bold"
        android:padding="20dp"
        />
    <TextView
        android:id="@+id/hos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:fontFamily="serif"
        android:text="@string/hospital_appointment"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:drawableLeft="@drawable/hospitalicon"
        android:drawablePadding="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
 />

    <TextView
        android:id="@+id/test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="@string/lab_test"
        android:layout_gravity="center"
        android:textColor="#000000"
        android:textSize="20dp"
        android:drawableLeft="@drawable/labsmenuicon"
        android:drawablePadding="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:id="@+id/ord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="@string/order_medicine"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:drawableLeft="@drawable/medicalshopicon"
        android:drawablePadding="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="30dp"
 />


</LinearLayout>