<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="10dp"
    android:paddingLeft="30dp"
    android:paddingRight="120dp"
    android:clipToPadding="false">

    <ImageView
        android:id="@+id/avatar"
        android:layout_alignParentLeft="true"
        android:scaleType="centerInside"
        android:background="@drawable/ic_email_black_24dp"
        android:layout_width="34dp"
        android:layout_height="34dp" />

    <TextView
        android:id="@+id/mapemail"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/avatar"
        android:layout_alignTop="@+id/avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:text="Rose"/>

    <ImageView
        android:id="@+id/avatar1"
        android:layout_alignParentLeft="true"
        android:scaleType="centerInside"
        android:layout_marginTop="10dp"
        android:layout_below="@id/avatar"
        android:background="@drawable/ic_phone_in_talk_black_24dp"
        android:layout_width="34dp"
        android:layout_height="34dp" />

    <TextView
        android:id="@+id/mapphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/avatar"
        android:layout_alignLeft="@+id/mapemail"
        android:layout_marginTop="10dp"

        />
    <ImageView
        android:id="@+id/avatar2"
        android:layout_alignParentLeft="true"
        android:scaleType="centerInside"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/avatar1"
        android:background="@drawable/ic_assignment_ind_black_24dp"
        android:layout_width="34dp"
        android:layout_height="34dp" />

    <TextView
        android:id="@+id/maprole"
        android:layout_marginLeft="15dp"
        android:layout_below="@id/avatar1"
        android:layout_toRightOf="@+id/avatar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:text="Rose"
        android:layout_marginTop="15dp"
        android:textColor="#ffffff"
        android:background="@drawable/their_message1"
        android:paddingHorizontal="16dp"
        android:elevation="2dp"
        android:textSize="18dp"
        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/select"
        android:background="@drawable/circle"
        android:text="Select"
        android:layout_below="@id/maprole"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        />


</RelativeLayout>